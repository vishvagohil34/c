#include<stdio.h>
void main(){
    int n,i,max,min;
    scanf("%d",&n);
    float sum=0,avg;
    int a[n];
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    max=a[0];
    min=a[0];
    for(i=0;i<n;i++)
    {
        if(a[i]>max)
        {
            max=a[i];
        }
        if(a[i]<min)
        {
            min=a[i];
        }
        sum=sum+a[i];
    }
    avg=sum/n;
    printf("%f\n",sum);
     printf("%f\n",avg);
      printf("%d\n",max);
       printf("%d\n",min);
}
